/* pages/sort/sort.wxss */
page{
  background-color: #EEE5DE;
}
.notice{
  display: flex;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: red;
}
.notice image{
  height: 40rpx;
  width: 40rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
}
.notice view{
  width: 100%;
  float: right;
  height: 60rpx;
  background-color: red;
  overflow: hidden;
}
.notice view text{
  width: 90%;
  float: right;
  font-size: 26rpx;
  color: #ffffff;
  white-space: nowrap;
}
.list{
  width: 100%;
  height: 80rpx;
}
.switch{
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  background-color: #ffffff;
  font-size: 32rpx;
}
.switch text{
  margin-left: 20rpx;
}
.switch switch{
  float: right;
  margin-right: 20rpx;
  zoom: .9
}
.tag{
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #EEE5DE;
  border-bottom: 1rpx solid #EEE5DE;
}
.tag text{
  font-size: 24rpx;
  color: red;
  margin-left: 20rpx;
}
.teachers{
  height: 120rpx;
  line-height: 120rpx;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1rpx solid #EEE5DE;
}
.teachers text{
  font-size: 36rpx;
  margin-left: 20rpx;
}