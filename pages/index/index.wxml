<view wx:if='{{ isSelected }}' class="cover" bindtap="selectList"></view>
<view wx:if='{{ isSelected }}' class='selectedView'>
  <text>{{ isSelectedValue }} <text>▼</text></text>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '全部导师列表' ? 'selectActive' : ' '}}" data-text="全部导师列表">全部导师列表</view>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '基础教研室' ? 'selectActive' : ' '}}" data-text="基础教研室">基础教研室</view>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '计应教研室' ? 'selectActive' : ' '}}" data-text="计应教研室">计应教研室</view>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '信管教研室' ? 'selectActive' : ' '}}" data-text="信管教研室">信管教研室</view>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '网络教研室' ? 'selectActive' : ' '}}" data-text="网络教研室">网络教研室</view>
  <view bindtap="changeDepartment" class="department {{ isSelectedValue == '实验室' ? 'selectActive' : ' '}}" data-text="实验室">实验室</view>
</view>
<view class="search">
  <icon class="search-icon"></icon>
  <input type='text' class='search-input' placeholder="输入导师姓名搜索" bindinput="searchName"></input>
</view>
<view class="title">
  <text bindtap="selectList">{{ isSelectedValue }} <text>▼</text></text>
  <text style="{{ selectSum==maxSelectSum ? 'color:red' : ' '}}">已选择  {{ selectSum }} / {{ maxSelectSum }}</text>
</view>
<scroll-view class="scroll-lable" scroll-y="true">
  <view class='lable'> 
    <view wx:if="{{ item.isDisplay && (item.department == isSelectedValue || isSelectedValue == '全部导师列表') }}" data-flag='{{ item.flag }}' data-display="{{ item.isDisplay }}" id='{{index}}' class='teacher-card {{ item.flag ? "active" : " " }}' bindtap='select' wx:for="{{ teachers }}" wx:key="{{index}}">{{ item.name }}</view>
  </view>
</scroll-view>