page{
  height: 100%;
}
.scroll-lable{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 400rpx;
}
.lable{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 0 auto;
  width: 670rpx;
  margin-top: 20rpx;
}
.teacher-card{
  display: flex;
  width: 134rpx;
  border: 1px solid gray;
  padding: 0px 6rpx 0px 6rpx;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  height: 60rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 14rpx;
}
.teacher-lable{
  display: flex;
  width: 100%;
  height: 160rpx;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #969696;
}
.teacher-lable image{
  width: 20%;
  height: 160rpx;
}
.teacher-message{
  height: 160rpx;
  width: 80%;
}
.teacher-name{
  position: relative;
  display: block;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  letter-spacing: 1rpx;
}
.teacher-department{
  position: relative;
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: red;
  margin-top: 10rpx;
}
.teacher-power{
  position: relative;
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: rgba(60, 57, 219, 0.815);
  margin-top: 10rpx;
}
.seal{
  position: absolute;
  width: 240rpx;
  height: 80rpx;
  transform: rotate(-15deg);
  border: 3px solid red;
  color: red;
  text-align: center;
  line-height: 80rpx;
  margin-left: 200rpx;
  margin-top: 30rpx;
  z-index: 88;
}

