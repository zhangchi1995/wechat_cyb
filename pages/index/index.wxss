/* 长条选择active */
.active{
  opacity: 0.2;
}
.search{
  display: flex;
  /* border: 1px solid #000000; */
  background-color: #2931;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 30rpx;
}
.search-icon{
  width: 30px;
  opacity: 1;
  background-repeat: no-repeat;
  background-position: left center;
  /* padding-left: 30px; */
  background-image: url("data:image/png;base64,");
  margin-left: 10rpx;
}
.search-input{
  opacity: 1;
  font-size: 14px;
  height: 40px;
  width: 100%;
  line-height: 40px;
}
.title{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  height: 40rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.fixed{
  position: fixed;
  margin-top: 0;
  top: 0;
  left: 0px;
  right: 0px;
  margin-left: auto;
  margin-right: auto;
  z-index: 100;
  height: 70rpx;
  line-height: 70rpx;
}
.title text text{
  color: red
}
.selectedView{
  position: absolute;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  z-index: 999;
  font-size: 14px;
}
.selectedView text{
  width: 90%;
  height: 40rpx;
  margin-bottom: 20rpx;
}
.selectedView view{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 60rpx;
}
.selectedView text text{
  color: red;
}
.cover{
  position: absolute;
  width: 100%;
  height: 1500rpx;
  background-color: gray;
  opacity: 0.8;
  z-index: 998;
}
.selectActive{
  color: red
}